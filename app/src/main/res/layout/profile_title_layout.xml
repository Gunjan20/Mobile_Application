<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    tools:ignore="UseCompoundDrawables">

    <TextView
        android:id="@+id/title_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="94dp"
        android:layout_marginLeft="94dp"
        android:text="@string/profile_title"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:ignore="RtlCompat" />

    <ImageButton
        android:id="@+id/left_icon_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/left_icon_2"
        android:layout_alignLeft="@id/left_icon_2"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:background="#10496D"
        android:contentDescription="@string/togobacktohomepage"
        android:src="@drawable/ic_back" />

    <ImageButton
        android:id="@+id/right_icon_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#10496D"
        android:layout_marginLeft="190dp"
        android:layout_toRightOf="@+id/title_profile"
        android:contentDescription="@string/homeicon"
        android:src="@drawable/ic_home"
        android:layout_marginStart="190dp"
        android:layout_toEndOf="@+id/title_profile" />

    <ImageButton
        android:id="@+id/right_icon_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="154dp"
        android:layout_marginLeft="154dp"
        android:layout_toEndOf="@+id/title_profile"
        android:layout_toRightOf="@+id/title_profile"
        android:background="#10496D"
        android:contentDescription="@string/settings_icon"
        android:src="@drawable/ic_settings" />

    <ImageButton
        android:id="@+id/right_icon_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="117dp"
        android:layout_marginLeft="117dp"
        android:layout_toEndOf="@+id/title_profile"
        android:layout_toRightOf="@+id/title_profile"
        android:background="#10496D"
        android:contentDescription="@string/edit_icon"
        android:src="@drawable/ic_edit" />

</RelativeLayout>